<Window x:Class="Sistema.ViewDesktop.TelaLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema.ViewDesktop"
        mc:Ignorable="d"
        Title="TelaLogin" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
        <Label x:Name="lblNomeUsuario" Content="Usuário" HorizontalAlignment="Left" Margin="321,163,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="lblSenha" Content="Senha" HorizontalAlignment="Left" Margin="321,209,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="lblBemVindo" Content="Bem-Vindo!" HorizontalAlignment="Center" Margin="0,103,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Button x:Name="btnEntrar" Content="Entrar" HorizontalAlignment="Center" Margin="0,284,0,0" VerticalAlignment="Top" Foreground="White" Background="#FFA7A7A7"/>
        <TextBox x:Name="txbUsuario" HorizontalAlignment="Left" Margin="382,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txbSenha" HorizontalAlignment="Left" Margin="382,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
 