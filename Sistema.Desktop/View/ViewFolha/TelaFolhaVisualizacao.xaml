        <Label Name="lblNomeF" FontSize="9" Foreground="White" Content="" Margin="98,273,0,142" HorizontalAlignment="Left" Width="97"/>
        <Label Name="lblCargo" FontSize="9" Foreground="White" Content="" Margin="200,273,0,142" HorizontalAlignment="Left" Width="121"/>
