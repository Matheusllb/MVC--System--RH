        <Label Name="lblTextoTotalDescontos" FontSize="5" Foreground="White" Content="Total Descontos" Margin="520,257,230,161"/>
        <Label Name="lblTextoTotalLiquido" FontSize="5" Foreground="White" Content="Total Líquido" Margin="575,257,175,0" Height="16" VerticalAlignment="Top"/>
