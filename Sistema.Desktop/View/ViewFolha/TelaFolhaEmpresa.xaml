<Window x:Class="Sistema.Desktop.View.ViewFolha.TelaFolhaEmpresa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema.Desktop.View.ViewFolha"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="800"
        x:Name="WindowFolhaEmpresa">
    <Grid>
        <Border CornerRadius="10" Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#353535" Offset="0.0"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border Grid.RowSpan="2"
                    Height="50"
                    VerticalAlignment="Top">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#FF7BD2F6" Offset="0.0"/>
                        <GradientStop Color="#FF946DED" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Button x:Name="btnVoltar"
                        Height="50"
                        Width="50"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Click="btnVoltar_Click">
                    <iconPacks:PackIconMaterial Kind="ArrowLeft"
                                                Height="20"
                                                Width="20"
                                                Foreground="#282828"/>
                </Button>
            </Border>
        </Border>

        <Button Name="btnMenu"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Height="50"
                Width="50"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                Foreground="#282828" 
                Click="btnMenu_Click" Margin="52,0,0,0">
            <iconPacks:PackIconMaterial Kind="Home"
                                        Height="30"
                                        Width="26"/>

        </Button>

        <Button Name="btnConfig"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Height="50"
                Width="50"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                Foreground="#282828" 
                Click="btnConfig_Click">
            <iconPacks:PackIconMaterial Kind="Cog"
                                        Height="20"
                                        Width="16"/>
        </Button>

        <Border Height="30"
                VerticalAlignment="Top" Margin="0,50,0,0">
            <Border.Background>
                <SolidColorBrush Color="#282828"/>
            </Border.Background>
        </Border>

        <Label Name="lblCaminho"
               Content="Folha de Pagamento - Cáculos - Individual"
               Margin="275,50,280,0"
               Foreground="LightGray" Height="30" VerticalAlignment="Top"/>

        <TextBox Name="txtCodEmpresa"
                 Text="{Binding ElementName=WindowFolhaEmpresa, Path=empresa.Id}" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="146,143,0,0" Foreground="White" Height="16" VerticalAlignment="Top" HorizontalAlignment="Left" Width="172"/>

        <Border CornerRadius="3"
                Background="#282828" 
                Margin="146,159,0,0"
                BorderBrush="Black" Height="7" VerticalAlignment="Top" HorizontalAlignment="Left" Width="217"/>

        <TextBox Name="txtNomeEmpresa"
                 Text="{Binding ElementName=WindowFolhaEmpresa, Path=empresa.Nome}" Margin="433,143,0,0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Foreground="White" Height="16" VerticalAlignment="Top" HorizontalAlignment="Left" Width="172"/>

        <Border CornerRadius="3"
                Background="#282828" 
                Margin="433,159,0,0"
                BorderBrush="Black" Height="7" VerticalAlignment="Top" HorizontalAlignment="Left" Width="218"/>

        <TextBox x:Name="txtCNPJEmpresa"
                 Text="{Binding ElementName=WindowFolhaEmpresa, Path=empresa.Cnpj}" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Foreground="White" Margin="146,250,0,0" Height="19" VerticalAlignment="Top" HorizontalAlignment="Left" Width="191"/>

        <Border CornerRadius="3"
                Background="#282828" 
                Margin="146,269,0,0"
                BorderBrush="Black" Height="8" VerticalAlignment="Top" HorizontalAlignment="Left" Width="217"/>

        <TextBox x:Name="txtSetorEmpresa"
                 Text="{Binding ElementName=WindowFolhaEmpresa, Path=empresa.Setor}" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Foreground="White" Margin="433,250,0,0" Height="19" VerticalAlignment="Top" HorizontalAlignment="Left" Width="191"/>

        <Border CornerRadius="3"
                Background="#282828" 
                Margin="433,269,0,0"
                BorderBrush="Black" Height="8" VerticalAlignment="Top" HorizontalAlignment="Left" Width="218"/>

        <TextBox x:Name="txtEmailEmpresa"
            Text="{Binding ElementName=WindowFolhaEmpresa, Path=empresa.Email}" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Foreground="White" Margin="146,198,0,0" Height="19" VerticalAlignment="Top" HorizontalAlignment="Left" Width="191"/>

        <Border CornerRadius="3"
            Background="#282828" 
            Margin="146,217,0,0"
            BorderBrush="Black" Height="8" VerticalAlignment="Top" HorizontalAlignment="Left" Width="217"/>

        <TextBox x:Name="txtTelefoneEmpresa"
            Text="{Binding ElementName=WindowFolhaEmpresa, Path=empresa.Telefone}" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Foreground="White"  Margin="145,303,0,0" Height="19" VerticalAlignment="Top" HorizontalAlignment="Left" Width="191"/>

        <Border CornerRadius="3"
            Background="#282828" 
            Margin="145,322,0,0"
            BorderBrush="Black" Height="8" VerticalAlignment="Top" HorizontalAlignment="Left" Width="217"/>

        <TextBox x:Name="txtEnderecoEmpresa"
            Text="{Binding ElementName=WindowFolhaEmpresa, Path=empresa.Endereco}" Margin="433,202,0,0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Foreground="White" Height="16" VerticalAlignment="Top" HorizontalAlignment="Left" Width="172"/>

        <Border CornerRadius="3"
            Background="#282828" 
            Margin="433,218,0,0"
            BorderBrush="Black" Height="7" VerticalAlignment="Top" HorizontalAlignment="Left" Width="218"/>

        <Label Content="Código" Foreground="#84a4f3" Margin="146,166,0,0" FontFamily="Helvetica" FontSize="10" HorizontalAlignment="Left" Width="45" Height="22" VerticalAlignment="Top"/>
        <Label Content="Nome" Foreground="#84a4f3" Margin="146,225,609,189" FontFamily="Helvetica" FontSize="10"/>
        <Label Content="CNPJ" Foreground="#84a4f3" Margin="146,277,0,137" FontFamily="Helvetica" FontSize="10" HorizontalAlignment="Left" Width="45"/>
        <Label Content="Setor" Foreground="#84a4f3" Margin="146,330,0,0" FontFamily="Helvetica" FontSize="10" HorizontalAlignment="Left" Width="59" Height="20" VerticalAlignment="Top"/>
        <Label Content="Telefone" Foreground="#84a4f3" Margin="434,225,0,0" FontFamily="Helvetica" FontSize="10" HorizontalAlignment="Left" Width="59" Height="25" VerticalAlignment="Top"/>
        <Label Content="E-Mail" Foreground="#84a4f3" Margin="434,166,0,0" FontFamily="Helvetica" FontSize="10" HorizontalAlignment="Left" Width="59" Height="22" VerticalAlignment="Top"/>
        <Label Content="Endereço" Foreground="#84a4f3" Margin="434,277,0,0" FontFamily="Helvetica" FontSize="10" HorizontalAlignment="Left" Width="59" Height="24" VerticalAlignment="Top"/>

        <TextBlock x:Name="txbContinuar"
                   Background="Transparent"
                   Foreground="White"
                   Text="Continuar"
                   FontSize="15"
                   Margin="0,0,150,47"
                   VerticalAlignment="Bottom" Height="23" HorizontalAlignment="Right" Width="75"/>

        <Button Name="btnContinuar"
                Click="btnContinuar_Click"
                Width="28"
                Height="28"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                Foreground="White"
                Margin="0,0,117,47" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <iconPacks:PackIconMaterial Kind="ArrowRightCircle"
                                        Width="20"
                                        Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </Button>

        <TextBlock x:Name="txbAnterior"
                   Background="Transparent"
                   Foreground="White"
                   Text="Voltar"
                   FontSize="15"
                   Margin="155,0,0,47"
                   VerticalAlignment="Bottom" Height="23" HorizontalAlignment="Left" Width="50"/>

        <Button Name="btnAnterior"
                Click="btnAnterior_Click"
                Width="28"
                Height="28"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                Foreground="White"
                Margin="113,0,0,47" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <iconPacks:PackIconMaterial Kind="ArrowLeftCircle"
                                Width="20"
                                Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </Button>

        <iconPacks:PackIconMaterial Kind="Numeric1Circle" Margin="195,98,0,0" Height="20" Width="20" Foreground="#282828"/>
        <Label Width="116" Height="26" Content="Informações gerais" Margin="221,95,0,0" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <iconPacks:PackIconMaterial Kind="Numeric2Circle" Margin="342,98,0,0" Height="20" Width="20" Foreground="#84a4f3"/>
        <Label Height="26" Width="58" Content="Empresa" Margin="367,95,0,0" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <iconPacks:PackIconMaterial Kind="Numeric3Circle" Margin="430,98,0,0" Height="20" Width="20" Foreground="#282828"/>
        <Label Height="26" Width="76"  Content="Funcionário" Margin="455,95,0,0" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <iconPacks:PackIconMaterial Kind="Numeric4Circle" Margin="536,98,0,0" Height="20" Width="20" Foreground="#282828"/>
        <Label Height="26" Width="39" Content="Folha" Margin="561,95,0,0" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left"/>

    </Grid>
</Window>
